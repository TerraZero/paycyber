{
  "scaffold": {
    "modules": [
      "zero-vue"
    ],
    "paths": {
      "comps": {
        "path": "components/${module}/${file}",
        "mode": "replace"
      },
      "system": {
        "path": "custom/${file}"
      },
      "module": {
        "path": "custom/system/modules/${module}/${file}"
      },
      "model": {
        "path": "prisma/models/${file}",
        "append": [
          "// > module ${module_name}"
        ]
      }
    },
    "after": [
      {
        "type": "append",
        "file": "prisma/connection.prisma",
        "pattern": "prisma/models/*.prisma",
        "separator": "\n",
        "result": "prisma/schema.prisma"
      }
    ]
  }
}